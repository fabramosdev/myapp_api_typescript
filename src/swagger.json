  "paths": {
    "/roles": {
      "post": {
        "tags": ["Role"],
        "summary": "Create a role",
        "description": "Create a new role",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Role ${name} created",
            "content": {
              "application/json": {
                "schema": {
                  "type":"object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "role": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type":"string"
                        },
                        "name": {
                          "type":"string"
                        },
                        "created_at": {
                          "type":"string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Role ${name} already exists."
          }
        }
      },
      "get": {
        "tags": ["Role"],
        "summary": "List all roles",
        "description": "Returns all roles paginated",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Number of page",
            "required": false,
            "schema": {
              "type": "number",
              "example": "page=1"
            },
            "style": "label"
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of registers per page",
            "required": false,
            "schema": {
              "type": "number",
              "example": "limit=15"
            },
            "style": "label"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "example": {
                  "per_page": 15,
                  "total": 2,
                  "current_page": 1,
                  "data": [
                    {
                      "id": "0195fcc5-0a90-7138-a090-257eb8f686e0",
                      "name": "Marketing",
                      "created_at": "2025-04-03T17:48:46.000Z"
                    },
                    {
                        "id": "0195fcda-45f9-70fc-b50a-7e70557306c8",
                        "name": "Developer",
                        "created_at": "2025-04-03T18:11:58.000Z"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
